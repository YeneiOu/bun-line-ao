# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# =============================================================================
# LINE BOT CONFIGURATION
# =============================================================================
# Get these from LINE Developers Console: https://developers.line.biz/
LINE_CHANNEL_ID="your_line_channel_id"
LINE_CHANNEL_SECRET="your_line_channel_secret"
LINE_REDIRECT_URI="http://localhost:3000/callback"

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL="http://localhost:5173"

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate these using: 
# openssl genrsa -out private.pem 2048 
# openssl rsa -in private.pem -pubout -out public.pem
# Then base64 encode them: 
# base64 -i private.pem 
# base64 -i public.pem
JWT_PRIVATE_KEY="your_base64_encoded_private_key"
JWT_PUBLIC_KEY="your_base64_encoded_public_key"

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get these from Firebase Console > Project Settings > General
FIREBASE_API_KEY="your_firebase_api_key"
FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
FIREBASE_APP_ID="your_app_id"
FIREBASE_MEASUREMENT_ID="your_measurement_id"

# Firebase Admin SDK Service Account Key (JSON as string)
# Generate from Firebase Console > Project Settings > Service Accounts > Generate new private key
# Then stringify the JSON and base64 encode it or use as-is
FIREBASE_SERVICE_ACCOUNT_KEY=""

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PREFIX="/api"
CORS_ORIGIN="*"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Database URL (if using other databases)
# DATABASE_URL=""

# Redis URL (if using Redis for caching)
# REDIS_URL=""

# Email Configuration (if using email services)
# SMTP_HOST=""
# SMTP_PORT=""
# SMTP_USER=""
# SMTP_PASS=""

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="json"
